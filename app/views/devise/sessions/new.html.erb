<form>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
  <div class="field form-group">
    <%= f.label :email, hidden: true %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "email", autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, hidden: true %><br />
    <%= f.password_field :password, placeholder: "password", autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-center">
    <%= f.submit "Log in", method: "POST", class: "form-control btn btn-outline-success text-success" %>
  </div>
<% end %>
<div class="w-100 m-3 text-center">
  <%= render "devise/shared/links" %>
</div>
</form>

